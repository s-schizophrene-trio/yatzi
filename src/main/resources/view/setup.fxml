<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="setupContainer" styleClass="setup-container" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.juventus.yatzi.ui.controller.SetupController">
    
    <VBox prefHeight="300.0" prefWidth="400.0">

        <padding>
            <Insets right="50" top="50" left="50"/>
        </padding>

        <Label text="Setup New Yatzi Game">
            <font>
                <Font name="Helvetica Neue Light" size="20.0" />
            </font>
            <padding>
                <Insets />
            </padding>
        </Label>
        <Label text="Select Game Mode..">
            <font>
                <Font name="Helvetica Neue Light" size="15.0" />
            </font>
            <padding>
                <Insets top="20.0" />
            </padding>
        </Label>

        <HBox>
            <HBox.margin>
                <Insets top="20.0" />
            </HBox.margin>
            <Button mnemonicParsing="false" text="Join a Sever"  onAction="#showJoinServerInformation"/>
            <Region prefWidth="100.0" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" text="Setup New Server" />

        </HBox>

        <VBox fx:id="joinServerContainer" prefHeight="100.0" visible="false">

            <Label text="Provide Server Connection Infos">
                <font>
                    <Font name="Helvetica Neue Light" size="15.0" />
                </font>
                <padding>
                    <Insets top="20.0" />
                </padding>
            </Label>

            <TextField text="Server Port" />
            <TextField text="Server IP" />

            <Button mnemonicParsing="false" text="Join Server" onAction="#joinServer" />

        </VBox>
    </VBox>
</AnchorPane>
